{
  "compilerOptions": {
    "module": "ES2020",
    "noImplicitAny": true,
    "noLib": false,
    "target": "ES2020",
    "sourceMap": true,
    "noEmitOnError": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "isolatedModules": true,
    "allowJs": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "uniorg": ["packages/uniorg/src"],
      "uniorg-parse": ["packages/uniorg-parse/src"],
      "uniorg-rehype": ["packages/uniorg-rehype/src"]
    }
  },
  "exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
